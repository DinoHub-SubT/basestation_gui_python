																					artifact_x: 1.3,
																					artifact_y: 2.8,
																					artifact_z: 1.5,
																					artifact_type: 'fireextinguisher',
																					artifact_robot_id: 0,
																					artifact_report_id: 48}'  -r 0.3 " output="screen"/> -->
	</group>

	<!-- geometry_msgs/Twist  '{linear:  {x: 0.1, y: 0.0, z: 0.0}, angular: {x: 0.0,y: 0.0,z: 0.0}}' -->


	<!--launch the gui-->
    <node name="rqt_gui" pkg="rqt_gui" type="rqt_gui" output="screen" />

    

</launch>